</head>
    <!-- css -->
    <script src="https://kit.fontawesome.com/b4c2bebdfd.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="../static/css/style.css">
    <!-- js -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <style>
      .todo-background{
   background: #de584e;
    color: white;
}


.todo-input{
    outline: none;
    border:none;
    border-radius: 5px;
    padding: 6px 15px;
    width:25%

}

.todo-button{
    background: rgb(52, 138, 30);
    color: white;
    border-radius: 5px;
}


.todo-button2{
    color:white;
    size: 15px;
    
}

.todo{
    background:#4169E1;
    color:white;
    height: 90vh;
}

.todo-input{
    outline: none;
    border-radius: 5px;
    padding: 6px 15px;
    width:250px

}

.todo-button{
    background: rgb(52, 138, 30);
    color: white;
    border-radius: 5px;
}


.todo-button-2{
    background: rgb(52, 138, 30);
    color: white;
    border-radius: 5px;
    max-width: 250px;
    height: 45px;


}

    </style>
<body class="todo-background" onload="loadData()">

    <div class="container">
            <div class="h2 text-center mt-3">TO DO</div>


            <!-- modal -->
            <form  id="frm" class="text-center mb-5" action="/" method="post">
              <input class="todo-input" id="todo" type="text" name="text" >
              <button id="submit" type="submit" class="todo-button btn text-center"><i class="fa-solid fa-plus"></i></button>  
          </form>
          <% data.forEach((x)=>{ %>
            <div class="container">
                
                <div class="alert alert-warning alert-dismissible">
                    <a href="/delete/<%= x.id %>"><button  type="button" class="close" ><i class="fa-solid fa-xmark"></i></button></a>
                        
                    <!-- modal -->
                    <button type="button" class="close mr-5" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap"><i class="fa-regular fa-pen-to-square"></i></button>

                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form action="/update/<%= x.id %>" method="post">
                                <input class="todo-input" id="todo" type="text" name="text" value="<%= x.text %>">
                                <button  type="submit" class="todo-button btn text-center">Update</button>  
                                </form>
                            </div>

                            </div>
                        </div>
                        </div>
                    <strong></strong> <%= x.text %> 
                    </div>
                </div>
                </form>
            </div>
            <% }) %>

    </div>
    
</body>